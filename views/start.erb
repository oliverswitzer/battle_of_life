




<html lang="en">
	<head>
		<link href="css/stylesheet.css" type="text/css" rel="stylesheet"/>
		<title>Game of Life</title>
	</head>
	<body>
	<div id="container">
		<form action="/play" method="POST">
		<label for="graph_point">Pick points on the graph</label>
			<% i = 0 %>
			<%@graph.each do |x|%>
				<br>
				<%x.each do |cell|%>
					<input type="checkbox" name="grid_<%=i%>" value="<%=[cell.x, cell.y]%>" id="graph_point">
					<%i += 1%>
				<%end%>
			<%end%>
			<br>
			<input type="submit" value="Submit"></input>
		<form/>
		</div>
	</body>
</html>

